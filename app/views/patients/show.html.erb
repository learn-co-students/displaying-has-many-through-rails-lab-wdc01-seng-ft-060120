<h1>Patient <%= @patient.name %></h1>

<h2>Appointments</h2>
<ul>
    <% @patient.appointments.each do |appointment| %>
        <li><%= appointment.appointment_datetime.strftime('%B %d, %Y at %H:%M') %> with <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></li>
    <% end %>
</ul>